        {% extends "layout.njk" %}

        {% block head %}

        <title>Portfolio - Micael Heber</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

        {% endblock %}

        {% block content %}

        <div class="cat">
            <h1>VIDEOS</h1>
        </div>

        <section class="cards">

        {% for item in items %}
        <div class="card" >
            <div class="card-image-container {{ 'featured-wrapper' if item.featured }}">
                <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt=" imagem de {{item.title}}">
                {% if item.featured %}
                    <div class="featured">Featured</div>
                {% endif %}
            </div>

            <div class="card-content">
                <p>{{item.title}}</p>
            </div>

            <div class="cardinfo" id="{{item.id}}">
                <p>{{item.duration}}</p>
                <p class="cardbutton">{{item.button}}</p>
            </div>
        </div>
        {% endfor %}

        </section>

        <script src="/scripts.js"></script>
        {% endblock %}
        </body>
        </html>
